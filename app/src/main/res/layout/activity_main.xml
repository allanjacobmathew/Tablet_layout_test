<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.allanjacob.tablet_layout_test.MainActivity">


    <EditText
        android:id="@+id/data_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="89dp"
        android:ems="10"
        android:hint="DATA"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/subdata_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/data_id"
        android:layout_alignStart="@+id/data_id"
        android:layout_below="@+id/data_id"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:hint="SUB DATA"
        android:inputType="phone" />

    <Button
        android:id="@+id/add_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subdata_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:text="ADD" />

    <Button
        android:id="@+id/view_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/add_id"
        android:layout_alignStart="@+id/add_id"
        android:layout_below="@+id/add_id"
        android:layout_marginTop="18dp"
        android:text="VIEW" />


</RelativeLayout>
